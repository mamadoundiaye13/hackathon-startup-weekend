{% extends 'base.html.twig' %}

{% block title %}About{% endblock %}

 {% block main %}
     <h1 class="text-center">Contact us</h1><br/>
     <form>
         <div class="form-row">
             <div class="form-group col-md-6">
                 <label for="inputEmail4">Name</label>
                 <input type="email" class="form-control" id="inputEmail4">
             </div>
             <div class="form-group col-md-6">
                 <label for="inputPassword4">First name</label>
                 <input type="password" class="form-control" id="inputPassword4">
             </div>
         </div>
         <div class="form-group">
             <label for="inputAddress">Email</label>
             <input type="text" class="form-control" id="inputAddress" placeholder="xxx@xxx.com">
         </div>
         <div class="form-group">
             <label for="inputAddress2">Your message</label>
             <textarea type="text" class="form-control" id="inputAddress2" placeholder="Enter your message"></textarea>
         </div>
         <div class="form-group">
             <div class="form-check">
                 <input class="form-check-input" type="checkbox" id="gridCheck">
                 <label class="form-check-label" for="gridCheck">
                     Save mail
                 </label>
             </div>
         </div>
         <button type="submit" class="btn btn-primary">Contact us</button>
     </form>
 {% endblock %}


